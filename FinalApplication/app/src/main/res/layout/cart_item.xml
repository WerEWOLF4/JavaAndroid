<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@color/white"
    android:gravity="center_vertical">

    <!-- Product Name -->
    <TextView
        android:id="@+id/txtCartItemTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Product Name"
        android:textSize="16sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:ellipsize="end" />

    <!-- Product Price -->
    <TextView
        android:id="@+id/txtCartItemPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Price: $0.00"
        android:textSize="14sp"
        android:gravity="center_vertical" />

    <!-- Decrease Button -->
    <ImageButton
        android:id="@+id/btnDecreaseQuantity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:src="@drawable/remove_20px"
        android:scaleType="centerInside"
        android:contentDescription="Decrease" />

    <!-- Quantity Text -->
    <TextView
        android:id="@+id/txtCartItemQuantity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="1"
        android:gravity="center"
        android:textSize="16sp"
        android:background="@color/beige"
        android:textColor="@color/black" />

    <!-- Increase Button -->
    <ImageButton
        android:id="@+id/btnIncreaseQuantity"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/black"
        android:src="@drawable/add_20px"
        android:scaleType="centerInside"
        android:contentDescription="Increase" />

    <!-- Delete Button -->
    <ImageButton
        android:id="@+id/btnDeleteItem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/remove_shopping_cart_20px"
        android:scaleType="centerInside"
        android:background="@android:color/transparent"
        android:contentDescription="Delete" />
</LinearLayout>
